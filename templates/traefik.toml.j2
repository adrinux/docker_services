[global]
  sendAnonymousUsage = true

[api]
  dashboard = true
  debug = true
  insecure = false

[entryPoints]
  [entryPoints.http]
    address = ":80"
  [entryPoints.https]
    address = ":443"

[providers]
  [providers.docker]
    endpoint = "unix:///var/run/docker.sock"
    exposedByDefault = false
    swarmMode = false
    useBindPortIp = true
    watch = true

  [providers.file]
    filename = "dynamic_conf.toml"
    watch = true

[[tls.certificates]]
  certFile = "{{ docker_data_dir }}/certbot/cert.pem"
  keyFile = "{{ docker_data_dir }}/certbot/key.pem"


